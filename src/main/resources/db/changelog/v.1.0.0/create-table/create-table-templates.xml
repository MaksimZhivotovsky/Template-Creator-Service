<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-templates" author="M_Zhivotovskiy">
        <createTable tableName="templates">
            <column name="template_id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="json_value" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="update_json_value" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="is_archive" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="create_data" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modify_data" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="service_id" type="BIGSERIAL">
                <constraints nullable="false"/>
            </column>
            <column name="organization_id" type="BIGSERIAL">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>